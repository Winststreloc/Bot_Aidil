# variable
def greet(bot_name, bot_years):
    print("Hello, my name is " + bot_name + ".")
    print("I was created in " + bot_years + ".")
    print("Now, I simple chatty bot, but in future time I will be more optional bot")


def remind_mane():
    print("Please, remind your name")
    name = input()
    print("What great name you have" + name + "!")


def counrty():
    print("What country do you live in?")
    counrty = input()
    print("Wow, I like " + counrty + ".")


def how_old(old):
    print("Let me determine how old you are.")
    print("Write what year you were born.")
    human_years = int(input())
    human_age = (old - human_years)
    print("Your age " + str(human_age) + ".")
    if human_age <= 12:
        print("So, you still have everything ahead of you")
    else:
        if human_age > 12 and human_age < 18:
            print("You are young and full of strength")
        else:
            print("Are you old enough.")


def count():
    print('Now I will prove to you that I can count to any number you want.')

    num = int(input())
    curr = 0
    while curr <= num:
        print(curr, '!')
        curr = curr + 1


def test():
    print("Let's test your programming knowledge.")
    print("Why do we use methods?")
    print(" 1. To repeat a statement multiple times.")
    print("2. To decompose a program into several small subroutines.")
    print("3. To determine the execution time of a program.")
    print("4. To interrupt the execution of a program.")

    answer = int(input())
    while answer != 2:
        print("Please, try again.")
        answer = int(input())  # write your code here
    print('Completed, have a nice day!')


def end():
    print('Congratulations, have a nice day!')


# Work
greet("Adil", "07.23.2020")
remind_mane()
counrty()
how_old(2020)
count()
test()
